<html>
    <head>
    <meta charset="UTF-8">
    <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">-->

    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">

    <style>
    body {
        font-size: 14px;
    }

    * {
        font-family: "IBM Plex Sans", sans-serif;
        font-weight: 400;
    }

    .timeline-item-warning, input {
        display: none;
    }

    .jobs img, .jobs .logo {
        display: none;
    }
    h1, h2, h3, h4 {
    margin: 0 0 4px 0;
    }

    h2 {
        font-size: 22px;
    }

    h3 {
        font-weight: bold;
    }

    .tags {
        font-size: 11px;
    }

    .me {
        position: absolute;
        height: 170px;
        z-index: -1;
    }

    .no-margin {
        margin: 0;
    }

    p {
        margin: 8px 0 8px;
    }

    .subtitle {
        font-size: 11px;
    }


    .contact {
        margin-left: 230px;
    }

    .contact a {
        color: black;
        text-decoration: none;
    }

    .description {
        font-size: 12px;
    }
    strong {
        font-weight: bold;
    }

    hr {
        margin: 16px 0 16px;
    }
    </style>

    </head>
    <body>
        <div>
            <img class="me" src="{{ profilePicture }}"/>
            <center>
                <h1>{{ name }} </h1>
                <h2>{{ title }}</h2>
                <p class="no-margin subtitle">
                    <i>{{ subtitle }}</i>
                </p>
                <p>
                    {{ personalInfo | raw }}
                </p>
            
            </center>
            <br/>
            <div class="contact">
                <ul style="list-style-type:none; padding: 0">
                    {{ socials | raw }}
                </ul>
            </div>
        </div>
        
        
        <div class="generic">
            <h2>About me</h2>
            {{ data['about-me'] | raw }}
        </div>


        <div class="jobs">
            <h2>Jobs</h2>
            {% for item in data.timeline %}
                <div>
                    <h3>{{ item.title | raw }}</h3>
                    <span>{{ item.date | raw }}</span>
                    <p class="tags">
                        {% for tag in item.tags %}
                            {{ tag }}
                        {% endfor %}
                    </p>
                    <div class="description">
                        {{ item.description | raw }}
                    </div>
                </div>
            {% endfor %}
        </div>


        <hr/>
        
        <div class="education">
            <h2>Education</h2>
            {% for item in data.education %}
                <div>
                    <h3>{{ item.title | raw }}</h3>
                    <span>{{ item.date | raw }}</span>
                    
                    <div class="description">
                        {{ item.description | raw }}
                    </div>
                </div>
            {% endfor %}
        </div>

        <hr/>

        <div class="generic">
            {% for item in data.generic %}
                <div>
                    <h3>{{ item.title | raw }}</h3>
                    <span>{{ item.date | raw }}</span>
                    
                    <div class="description">
                        {{ item.description | raw }}
                    </div>
                </div>
            {% endfor %}
        </div>

    </body>
</html>